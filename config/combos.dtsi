#define COMBO(NAME, BINDINGS, KEYPOS, TERM) \
        combo_##NAME { \
            timeout-ms = <TERM>; \
            bindings = <BINDINGS>; \
            key-positions = <KEYPOS>; \
            layers = <0 1>; \
        };

/ {
    combos {
        compatible = "zmk,combos";

/*                KEY POSITIONS
